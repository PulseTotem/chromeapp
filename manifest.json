{
  "name": "PulseTotem Kiosk",
  "description": "The first kiosk for PulseTotem",
  "version": "0.2.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "webview",
    "fullscreen",
    "storage",
    "audioCapture",
    "videoCapture",
    "power"
  ],
  "kiosk_enabled": true,
  "icons": { "16": "images/pulsetotem-16.png", "128": "images/pulsetotem-128.png" }
}